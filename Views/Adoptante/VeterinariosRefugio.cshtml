@model List<Veterinario>

@{
    var paginaActual = ViewBag.PaginaActual;
    var totalPaginas = ViewBag.TotalPaginas;
    var idRefugio = ViewBag.IdRefugio;
    @Html.AntiForgeryToken()
}
<input type="hidden" id="idRefugioActual" value="@idRefugio" />
<div class="container-fluid px-4 py-5 vet-container">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="vet-page-title text-center mb-4">
                <span class="title-highlight">Nuestros</span>
                <span class="title-highlight">Veterinarios</span>
                <span class="title-emoji">👨‍⚕️</span>
            </h1>
        </div>
    </div>

    <!-- Single Veterinario Card - One per page -->
    @if (Model.Any())
    {
        var veterinarioActual = Model.FirstOrDefault();
        <div class="row justify-content-center vet-cambiar">
            <div class="col-12">
                <div class="card vet-card-horizontal border-0 shadow-lg overflow-hidden mb-5">
                    <div class="row g-0">
                        <!-- Imagen del veterinario -->
                        <div class="col-xl-5 position-relative">
                            <img src="~/images/@veterinarioActual.Foto"
                                 class="vet-image-horizontal h-100 w-100"
                                 alt="@veterinarioActual.Nombre">
                            <div class="vet-image-overlay">
                                <div class="vet-badge bg-primary">
                                    <i class="fas fa-stethoscope"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Información del veterinario -->
                        <div class="col-xl-7">
                            <div class="vet-card-content p-4 p-md-5">
                                <div class="vet-name-container mb-4">
                                    <h2 class="vet-name">
                                        @veterinarioActual.Nombre
                                    </h2>
                                </div>

                                <div class="vet-characteristics mb-4">
                                    <div class="characteristic">
                                        <div class="characteristic-icon">
                                            <i class="fas fa-certificate text-primary"></i>
                                        </div>
                                        <div class="characteristic-info">
                                            <span class="label">Especialización</span>
                                            <span class="value">@veterinarioActual.Especializacion</span>
                                        </div>
                                    </div>

                                    <div class="characteristic">
                                        <div class="characteristic-icon">
                                            <i class="fas fa-phone text-success"></i>
                                        </div>
                                        <div class="characteristic-info">
                                            <span class="label">Contacto</span>
                                            <span class="value">@veterinarioActual.Contacto</span>
                                        </div>
                                    </div>

                                    <div class="characteristic">
                                        <div class="characteristic-icon">
                                            <i class="fas fa-clock text-warning"></i>
                                        </div>
                                        <div class="characteristic-info">
                                            <span class="label">Horario de Atención</span>
                                            <span class="value">@veterinarioActual.HorarioAtencion</span>
                                        </div>
                                    </div>

                                    <div class="characteristic">
                                        <div class="characteristic-icon">
                                            <i class="fas fa-home text-info"></i>
                                        </div>
                                        <div class="characteristic-info">
                                            <span class="label">Refugio Asociado</span>
                                            <span class="value">@veterinarioActual.Refugio.NombreRefugio</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Descripción completa -->
                                <div class="vet-description mt-4">
                                    <h4 class="mb-3">Sobre el veterinario</h4>
                                    <p class="description-text">
                                        @veterinarioActual.Descripcion
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- No veterinarios found message -->
    @if (!Model.Any())
    {
        <div class="text-center mt-5">
            <h3 class="text-muted">No se encontraron veterinarios 👨‍⚕️</h3>
            <p class="lead">No hay veterinarios disponibles en este momento</p>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="pagination-controls d-flex justify-content-center mt-3 mb-5">
                    <button class="btn btn-outline-primary me-2" onclick="cargarPagina(1)" @(paginaActual <= 1 ? "disabled" : "")>
                        <i class="fas fa-angle-double-left"></i>
                    </button>
                    <button class="btn btn-outline-primary me-2" onclick="cargarPagina(@(paginaActual - 1))" @(paginaActual <= 1 ? "disabled" : "")>
                        <i class="fas fa-angle-left"></i>
                    </button>
                    <span class="badge bg-primary rounded-pill px-3 py-2 d-flex align-items-center mx-2">
                        <i class="fas fa-paw me-1"></i>
                        <span id="paginaInfo">@paginaActual de @totalPaginas</span>
                    </span>
                    <button class="btn btn-outline-primary ms-2" onclick="cargarPagina(@(paginaActual + 1))" @(paginaActual >= totalPaginas ? "disabled" : "")>
                        <i class="fas fa-angle-right"></i>
                    </button>
                    <button class="btn btn-outline-primary ms-2" onclick="cargarPagina(@totalPaginas)" @(paginaActual >= totalPaginas ? "disabled" : "")>
                        <i class="fas fa-angle-double-right"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<script>
        function cargarPagina(pagina) {
        var idRefugio = $("#idRefugioActual").val();

        // Realizar la petición Ajax
        $.ajax({
            url: '@Url.Action("VeterinariosRefugio", "Adoptante")',
            data: { idrefugio: idRefugio, pagina: pagina },
            type: "GET",
            success: function(data) {
                // Extraer solo la tarjeta del veterinario y la paginación
                var $data = $(data);
                var cardHtml = $data.find('.row.justify-content-center').html();
                var paginacionHtml = $data.find('.pagination-controls').parent().html();

                // Actualizar sólo la tarjeta del veterinario
                $('.row.justify-content-center').html(cardHtml);

                // Actualizar la paginación
                $('.pagination-controls').parent().html(paginacionHtml);

                // Actualizar la información de paginación
                var paginaInfo = $("#paginaInfo").text();
            },
            error: function(error) {
                console.log("Error al cargar la página:", error);
            }
        });
    }
</script>

<style>
    .pagination-controls .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        padding: 0;
        border-radius: 50%;
        transition: all 0.3s ease;
    }

        .pagination-controls .btn:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .pagination-controls .badge {
        height: 40px;
    }

    .vet-page-title {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        font-weight: 800;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .title-highlight {
        position: relative;
        display: inline-block;
    }

        .title-highlight::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(to right, #007bff, #00c6ff);
            transform: scaleX(0);
            transform-origin: right;
            transition: transform 0.3s ease;
        }

    .vet-page-title:hover .title-highlight::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    .title-emoji {
        display: inline-block;
        transform: translateY(-3px);
    }

    /* Horizontal Card Styling */
    .vet-card-horizontal {
        border-radius: 15px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 100%;
    }

        .vet-card-horizontal:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

    .vet-image-horizontal {
        object-fit: cover;
        border-radius: 15px 0 0 15px;
    }

    .vet-image-overlay {
        position: absolute;
        top: 15px;
        left: 15px;
    }

    .vet-badge {
        font-size: 2rem;
        background: rgba(255,255,255,0.8);
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }

    .vet-name-container {
        display: flex;
        justify-content: flex-start;
    }

    .vet-name {
        font-size: 2.2rem;
        font-weight: 700;
        color: #007bff;
        position: relative;
    }

        .vet-name::before {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 100%;
            height: 8px;
            background: rgba(0, 123, 255, 0.2);
            z-index: -1;
            transform: rotate(-1deg);
        }

    .vet-characteristics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
    }

    .characteristic {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .characteristic-icon {
        background-color: rgba(0, 123, 255, 0.1);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .characteristic-icon i {
            font-size: 1.5rem;
        }

    .characteristic-info {
        display: flex;
        flex-direction: column;
    }

        .characteristic-info .label {
            font-size: 0.9rem;
            color: #6c757d;
            text-transform: uppercase;
        }

        .characteristic-info .value {
            font-weight: bold;
            color: #333;
            font-size: 1.1rem;
        }

    .vet-description {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        color: #555;
    }

    .description-text {
        margin: 0;
        line-height: 1.8;
        font-size: 1.1rem;
    }

    @@media (max-width: 1199.98px) {
        .vet-image-horizontal

    {
        border-radius: 15px 15px 0 0;
        height: 300px;
    }

    .vet-characteristics {
        grid-template-columns: 1fr;
    }

    }
</style>