@model List<ConversacionViewModel>
@{
    ViewData["Title"] = "Mis conversaciones";
    
}

<div class="container mt-4">
    <h2>Mis conversaciones</h2>

    <div class="row">
        <div class="col-md-8">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    No tienes conversaciones activas. Puedes iniciar una conversación desde la página de detalles de un refugio.
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var conversacion in Model)
                    {
                        <a href="@Url.Action("Chat", new { id = conversacion.UsuarioId })" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@conversacion.NombreUsuario</h5>
                                <small>@conversacion.FechaUltimoMensaje.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            <p class="mb-1 text-truncate">@conversacion.UltimoMensaje</p>
                            @if (conversacion.NoLeidos > 0)
                            {
                                <span class="badge badge-primary badge-pill">@conversacion.NoLeidos</span>
                            }
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>